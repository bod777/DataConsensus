@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix dpv: <https://w3id.org/dpv#> .
@prefix dpvpd: <https://w3id.org/dpv/dpv-pd#> .
@prefix oac: <https://w3id.org/oac/> .
@prefix project: <https://storage.inrupt.com/b41a41bc-203e-4b52-9b91-4278868cd036/app/interactions/policies/projects#> .
@prefix offer: <https://storage.inrupt.com/b41a41bc-203e-4b52-9b91-4278868cd036/app/policies/offers#> .

offer:rejection a odrl:Offer .

offer:1 a odrl:Offer ;
    dct:creator <https://id.inrupt.com/janedoe> ;
    dct:issued "2022-11-08T17:26:35"^^xsd:dateTime ;
    dct:isPartOf project:3 ;
    policy:thirdPartyApproved policy:Approved;
    policy:memberApproved policy:Approved;
    policy:adminApproved policy:Approved;
    odrl:uid offer:1 ;
    odrl:profile oac: ;        
    odrl:permission offer:1_permission .

offer:1_permission a odrl:Permission;
    odrl:assigner <https://id.inrupt.com/DataConsensus> ;
    odrl:assignee <https://id.inrupt.com/FightDiabetesDublin>;
    odrl:action dpv:Use, dpv:Copy, dpv:Store, dpv:Remove, dpv:Transform;
    odrl:target dpvpd:MedicalHealth;
    odrl:constraint offer:1_purposeConstraint, offer:1_sellingDataConstraint, offer:1_sellingInsightsConstraint, offer:1_organisationConstraint, offer:1_techOrgMeasureConstraint, offer:1_recipientConstraint, offer:1_durationConstraint .
        
offer:1_purposeConstraint a odrl:Constraint ;
    odrl:leftOperand oac:Purpose ;
    odrl:operator odrl:isA ;
    odrl:rightOperand dpv:NonCommercialResearch .

offer:1_sellingDataConstraint a odrl:Constraint ;
    odrl:leftOperand oac:Purpose ;
    odrl:operator odrl:isNotA ;
    odrl:rightOperand dpv:SellDataToThirdParties .

offer:1_sellingInsightsConstraint a odrl:Constraint ;
    odrl:leftOperand oac:Purpose ;
    odrl:operator odrl:isNotA ;
    odrl:rightOperand dpv:SellInsightsFromData .

offer:1_organisationConstraint a odrl:Constraint ;
    odrl:leftOperand oac:Organisation   ;
    odrl:operator odrl:isA ;
    odrl:rightOperand dpv:NonProfitOrganisation .

offer:1_techOrgMeasureConstraint a odrl:Constraint ;
    odrl:leftOperand oac:TechnicalOrganisationalMeasure   ;
    odrl:operator odrl:isAllOf ;
    odrl:rightOperand dpv:CodeOfConduct, dpv:DataProtectionTraining, dpv:ConsultationWithDPO, dpv:IncidentReportingCommunication, dpv:OperatingSystemSecurity, dpv:PasswordAuthentication, dpv:EncryptionInTransfer, dpv:EncryptionAtRest .

offer:1_recipientConstraint a odrl:Constraint ;
    odrl:leftOperand oac:Recipient  ;
    odrl:operator odrl:isAnyOf ;
    odrl:rightOperand <https://id.inrupt.com/FightDiabetesDublin>, <https://id.inrupt.com/DataConsensus> .

offer:1_durationConstraint a odrl:Constraint ;
    odrl:leftOperand dpv:UntilTimeDuration ;
    odrl:operator odrl:eq ;
    odrl:rightOperand "2024-06-31"^^xsd:date .

