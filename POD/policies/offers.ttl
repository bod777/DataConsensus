pod:1 a odrl:Offer ;
    dct:creator <https://id.inrupt.com/DataConsensus> ;
    dct:issued "2022-11-08T17:26:35"^^xsd:dateTime ;
    dct:isPartOf project:1 ;
    policy:hasStatus policy:Approved ;
    odrl:uid pod:1 ;
    odrl:profile oac: ;
    odrl:permission [
        odrl:assigner <https://id.inrupt.com/DataConsensus> ;
        odrl:assignee <https://id.inrupt.com/DrJohnSmith> ;
        odrl:action dpv:Use, dpv:Copy, dpv:Store, dpv:Remove, dpv:Transform;
        odrl:target dpvpd:MedicalHealth;
        odrl:constraint [
            odrl:and [
                a odrl:Constraint ;
                odrl:leftOperand oac:Purpose ;
                odrl:operator odrl:isA ;
                odrl:rightOperand dpv:AcademicResearch
            ] , [
                a odrl:Constraint ;
                odrl:leftOperand oac:Purpose ;
                odrl:operator odrl:isNoneOf ;
                odrl:rightOperand dpv:CommercialResearch, dpv:SellInsightsFromData, dpv:SellDataToThirdParties
            ] , [
                a odrl:Constraint ;
                odrl:leftOperand oac:Organisation   ;
                odrl:operator odrl:isA ;
                odrl:rightOperand dpv:AcademicScientificOrganisation
            ] , [
                a odrl:Constraint ;
                odrl:leftOperand oac:TechnicalOrganisationalMeasure   ;
                odrl:operator odrl:isAllOf ;
                odrl:rightOperand dpv:CodeOfConduct, dpv:DataProtectionTraining, dpv:ConsultationWithDPO, dpv:IncidentReportingCommunication, dpv:ComplianceMonitoring, dpv:PasswordAuthentication, dpv:EncryptionInTransfer, dpv:EncryptionAtRest
            ] , [
                a odrl:Constraint ;
                odrl:leftOperand oac:Recipient  ;
                odrl:operator odrl:isAnyOf ;
                odrl:rightOperand <https://id.inrupt.com/DrJohnSmith>, <https://id.inrupt.com/DataConsensus>, dpv:AcademicScientificOrganisation
            ] , [
                a odrl:Constraint ;
                odrl:leftOperand dpv:UntilTimeDuration ;
                odrl:operator odrl:eq ;
                odrl:rightOperand "2023-12-31"^^xsd:date 
            ]
        ]
    ] .


